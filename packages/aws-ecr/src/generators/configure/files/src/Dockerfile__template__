
# Run the container with `docker run -p 3000:3000 -t <%= projectName %>`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system <%= projectName %> && \
          adduser --system -G <%= projectName %> <%= projectName %>

COPY dist/apps/<%= projectName %> <%= projectName %>
RUN chown -R <%= projectName %>:<%= projectName %> .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN yarn --cwd <%= projectName %> --omit=dev -f install

CMD [ "node", "<%= projectName %>" ]
